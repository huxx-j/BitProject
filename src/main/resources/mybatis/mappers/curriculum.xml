<?xml version="1.0" encoding="UTF-8" ?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="curri">

    <select id="getWorkType" resultType="String">
        <![CDATA[
        SELECT WorkType from Curriculum group by WorkType
        ]]>
    </select>

    <select id="getCurri" parameterType="String" resultType="com.bitacademy.vo.CurriculumVo">
        <![CDATA[
        select Curriculum_no, CurriName from Curriculum where WorkType=#{workType}
        ]]>
    </select>

    <select id="getCurriInfo" parameterType="Int" resultType="com.bitacademy.vo.CurriculumVo">
        <![CDATA[
        select CurriName, PeriodFr, PeriodTo from Curriculum where Curriculum_no=#{curriculum_no};
        ]]>
    </select>


</mapper>
