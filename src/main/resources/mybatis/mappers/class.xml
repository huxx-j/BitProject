<?xml version="1.0" encoding="UTF-8" ?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="class">

    <select id="getWorkType" resultType="String">
        <![CDATA[
        SELECT WorkType
            from Curriculum
            group by WorkType
        ]]>
    </select>

    <select id="getCurri" parameterType="String" resultType="String">
        <![CDATA[
        select CurriName
            from Curriculum
            where WorkType=#{workType}
        ]]>
    </select>

    <select id="getDate" resultType="String">
        <![CDATA[
        select current_date
            from dual
        ]]>
    </select>


</mapper>
